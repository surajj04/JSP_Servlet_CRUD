<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>getStudentController</servlet-name>
    <servlet-class>org.bytetech.controller.GetStudentController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getStudentController</servlet-name>
    <url-pattern>/getStudent</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>addStudentController</servlet-name>
    <servlet-class>org.bytetech.controller.AddStudentController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addStudentController</servlet-name>
    <url-pattern>/addStudent</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getAllStudentController</servlet-name>
    <servlet-class>org.bytetech.controller.GetAllStudentController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getAllStudentController</servlet-name>
    <url-pattern>/getAllStudent</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>removeStudentController</servlet-name>
    <servlet-class>org.bytetech.controller.RemoveStudentController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>removeStudentController</servlet-name>
    <url-pattern>/removeStudent</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>updateStudentController</servlet-name>
    <servlet-class>org.bytetech.controller.UpdateStudentController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>updateStudentController</servlet-name>
    <url-pattern>/updateStudent</url-pattern>
  </servlet-mapping>

</web-app>
